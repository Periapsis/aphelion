<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
        <controlDefinition name="energybar" controller="aphelion.client.graphics.nifty.EnergyBar">
                <panel childLayout="center">
                        <panel id="#progress" x="0" y="0" height="100%" width="0px" style="#progress">
                                <effect>
                                        <onShow
                                                  name="backgroundColorSpriteEffect"
                                                  length="infinite"
                                                  colors="#9c9ce7ff,#7b7bc6ff,#7373b5ff,#7373b5ff,#6363a5ff,#5a5a94ff,#5a5a94ff,#4a4a7bff,#5a5a94ff,#5a5a94ff,#6363a5ff,#7373b5ff,#7373b5ff,#7b7bc6ff"
                                                  frameLength="80"/>
                                </effect>
                        </panel>
                </panel>
        </controlDefinition>
        <controlDefinition name="energybar-yellow" controller="aphelion.client.graphics.nifty.EnergyBar">
                <panel childLayout="center">
                        <panel id="#progress" x="0" y="0" height="100%" width="0px" style="#progress">
                                <effect>
                                        <onShow
                                                  name="backgroundColorSpriteEffect"
                                                  length="infinite"
                                                  colors="#ffffffff,#ffc631ff,#f7b529ff,#e7b521ff,#e7b521ff,#ce9408ff,#b57b10ff,#9c8418ff,#946308ff,#845a29ff,#5a5a18ff,#733910ff,#5a4208ff,#4d2d04ff"
                                                  frameLength="80"/>
                                </effect>
                        </panel>
                </panel>
        </controlDefinition>
        <controlDefinition name="energybar-red" controller="aphelion.client.graphics.nifty.EnergyBar">
                <panel childLayout="center">
                        <panel id="#progress" x="0" y="0" height="100%" width="0px" style="#progress">
                                <effect>
                                        <onShow
                                                  name="backgroundColorSpriteEffect"
                                                  length="infinite"
                                                  colors="#ffffffff,#ce0808ff,#ce0808ff,#ce0808ff,#a52900ff,#731800ff,#731800ff,#ffffffff,#ce0808ff,#ce0808ff,#ce0808ff,#a52900ff,#731800ff,#731800ff"
                                                  frameLength="80"/>
                                </effect>
                        </panel>
                </panel>
        </controlDefinition>
        
        
        <screen id="aphelion-main">
                
                <layer childLayout="center">
                        <!-- main camera -->
                        <control name="aphelion-camera" stars="true" clip="false" font-player="font.ubuntu-mono-bold-16"/>
                </layer>
                
                <layer childLayout="center">
                        <!-- radar -->
                        <panel id="radar-small" align="right" valign="bottom" width="306px" height="306px" childLayout="center">
                                <panel childLayout="absolute">
                                        <panel childLayout="horizontal" x="0" y="-16px" width="100%" height="16px">
                                                <panel/>
                                                <text font="font.ubuntu-mono-bold-16" color="#ffff" textHAlign="right" textVAlign="bottom" width="30%" height="100%">
                                                        <effect>
                                                                <onStartScreen name="clockText" length="infinite" format="HH:mm"/>
                                                                <onShow name="clockText" length="infinite" format="HH:mm"/>
                                                        </effect>
                                                </text>
                                                <panel width="1px"/>
                                        </panel>
                                </panel>
                                <image filename="classic.window-border" imageMode="resize:3,2,3,3,3,2,3,2,3,2,3,3" width="306px" height="306px"/>
                                <panel width="300px" height="300px" backgroundColor="#000000b0"/>
                                <control name="aphelion-camera" width="300px" height="300px" zoom="0.0833333" stars="false" clip="true"/>
                        </panel>
                        <panel id="radar-big" align="right" valign="bottom" width="606px" height="606px" childLayout="center" visible="false">
                                <image filename="classic.window-border" imageMode="resize:3,2,3,3,3,2,3,2,3,2,3,3" width="606px" height="606px"/>
                                <panel width="600px" height="600px" backgroundColor="#000000b0"/>
                                <control name="aphelion-camera" width="600px" height="600px" zoom="fill" stars="false" clip="true"/>
                        </panel>
                </layer>
                
                <layer childLayout="center">
                        <text id="debug-info" font="font.ubuntu-mono-bold-16" color="#ffff" 
                              align="left" valign="top" textVAlign="top" textHAlign="left" 
                              width="100%" height="100px"/>
                        
                        <panel childLayout="center" valign="top" align="center" width="50%" height="28px">
                                <!-- energy bar -->
                                
                                <panel childLayout="horizontal" valign="top" margin="9px,0px,0px,0px" width="100%" height="2px">
                                        <panel childLayout="center" height="100%" backgroundColor="#9c9ce7ff"/>
                                        <panel width="17px"/>
                                        <panel childLayout="center" height="100%" backgroundColor="#9c9ce7ff"/>
                                </panel>
                                
                                <panel childLayout="horizontal" valign="top" margin="13px,0px,0px,0px" width="100%" height="6px">
                                        <panel childLayout="center" height="100%">
                                                <control name="energybar-red"               id="energybar0" barAlign="right" width="100%" height="100%"/>
                                                <control name="energybar-yellow" min="0.25" id="energybar1" barAlign="right" width="100%" height="100%"/>
                                                <control name="energybar"        min="0.5"  id="energybar2" barAlign="right" width="100%" height="100%"/>
                                        </panel>
                                        <panel width="17px"/>
                                        <panel childLayout="center" height="100%">
                                                <control name="energybar-red"               id="energybar3" barAlign="left" width="100%" height="100%"/>
                                                <control name="energybar-yellow" min="0.25" id="energybar4" barAlign="left" width="100%" height="100%"/>
                                                <control name="energybar"        min="0.5"  id="energybar5" barAlign="left" width="100%" height="100%"/>
                                        </panel>
                                </panel>
                                
                                <image filename="gui.healthbar" imageMode="subImage:0,0,116,28" 
                                       width="116px" height="28px" align="center" valign="top"/>
                        </panel>
                </layer>
        </screen>
</nifty>