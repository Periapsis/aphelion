<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
        <screen id="aphelion-main">
                
                <layer childLayout="center">
                        <!-- main camera -->
                        <control name="aphelion-camera" stars="true" clip="false" font-player="font.ubuntu-mono-bold-16"/>
                </layer>
                
                <layer childLayout="center">
                        <!-- radar -->
                        <panel id="radar-small" align="right" valign="bottom" width="306px" height="306px" childLayout="center">
                                
                                <image filename="classic.window-border" imageMode="resize:3,2,3,3,3,2,3,2,3,2,3,3" width="306px" height="306px"/>
                                <panel width="300px" height="300px" backgroundColor="#000000b0"/>
                                <control name="aphelion-camera" width="300px" height="300px" zoom="0.0833333" stars="false" clip="true"/>
                        </panel>
                        <panel id="radar-big" align="right" valign="bottom" width="606px" height="606px" childLayout="center" visible="false">
                                <image filename="classic.window-border" imageMode="resize:3,2,3,3,3,2,3,2,3,2,3,3" width="606px" height="606px"/>
                                <panel width="600px" height="600px" backgroundColor="#000000b0"/>
                                <control name="aphelion-camera" width="600px" height="600px" zoom="fill" stars="false" clip="true"/>
                        </panel>
                </layer>
                
                <layer childLayout="center">
                        <text id="debug-info" font="font.ubuntu-mono-bold-16" color="#ffff" 
                              align="left" valign="top" textVAlign="top" textHAlign="left" 
                              width="100%" height="100px"/>
                </layer>
        </screen>
</nifty>