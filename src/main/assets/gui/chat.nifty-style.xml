<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles xmlns="http://nifty-gui.sourceforge.net/nifty-styles-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-styles-1.3.xsd http://nifty-gui.sourceforge.net/nifty-styles-1.3.xsd">
        <style id="aphelion-chat-control#mainPanel">
                <attributes width="100%"/>
        </style>

        <style id="aphelion-chat-control#chatPanel">
                <attributes/>
        </style>
        
        <style id="aphelion-chat-control#mainPanel-spacer">
                <attributes width="2"/>
        </style>
        
        <style id="aphelion-chat-control#chatArea">
                <attributes backgroundColor="#ffffff08"/>
        </style>
        
        <style id="aphelion-chat-control#chatPanel-spacer">
                <attributes width="2"/>
        </style>

        <style id="aphelion-chat-control#playerArea">
                <attributes width="200px" backgroundColor="#ffffff08"/>
        </style>

        

        <style id="aphelion-chat-control#chatTextArea">
                <attributes align="left" width="100%" height="23"/>
        </style>
        
  
        <style id="current-player">
                
        </style>
  
        <style id="default">
                
        </style>
        
        <style id="aphelion-chat-text-input#panel">
                <attributes childLayout="overlay" height="23px" />
                <effect>
                        <onHover name="changeMouseCursor" id="textFieldCursor" />
                </effect>
        </style>

        <style id="aphelion-chat-text-input#field">
                <!-- override to disable the border effects -->
                <attributes childLayout="center" childClip="true" padding="0px,2px" backgroundColor="#ffffff08"/>
        </style>
        <style id="aphelion-chat-text-input#text" base="nifty-textfield#text"/>
        <style id="aphelion-chat-text-input#cursor-panel" base="nifty-textfield#cursor-panel"/>
        <style id="aphelion-chat-text-input#cursor" base="nifty-textfield#cursor"/>
  
</nifty-styles>
